{
    "manifest_version": 3,
    "name": "Userex Companion",
    "version": "1.0.0",
    "description": "Record and analyze user flows directly from your browser.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "debugger",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.js"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "src/components/FloatingControl.tsx"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}